{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Paradigm Studio Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "generatedAt", "repo", "stats", "packs", "modules"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "generatedAt": { "type": "string", "minLength": 1 },
    "repo": {
      "type": "object",
      "additionalProperties": false,
      "required": ["owner", "name", "defaultBranch", "sha", "tag"],
      "properties": {
        "owner": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "defaultBranch": { "type": "string", "minLength": 1 },
        "sha": { "type": "string", "minLength": 7 },
        "tag": { "type": ["string", "null"] }
      }
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "required": ["agents", "commands", "skills", "rules", "packs"],
      "properties": {
        "agents": { "type": "integer", "minimum": 0 },
        "commands": { "type": "integer", "minimum": 0 },
        "skills": { "type": "integer", "minimum": 0 },
        "rules": { "type": "integer", "minimum": 0 },
        "packs": { "type": "integer", "minimum": 0 }
      }
    },
    "packs": {
      "type": "array",
      "items": { "$ref": "#/$defs/pack" }
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["agents", "commands", "skills", "rules"],
      "properties": {
        "agents": { "type": "array", "items": { "$ref": "#/$defs/agent" } },
        "commands": { "type": "array", "items": { "$ref": "#/$defs/command" } },
        "skills": { "type": "array", "items": { "$ref": "#/$defs/skill" } },
        "rules": { "type": "array", "items": { "$ref": "#/$defs/rule" } }
      }
    }
  },
  "$defs": {
    "digest": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "pack": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "description", "modules", "tags", "path", "digest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "modules": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "tags": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "path": { "type": "string", "minLength": 1 },
        "digest": { "$ref": "#/$defs/digest" }
      }
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name", "description", "model", "tools", "path", "digest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "const": "agent" },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": ["string", "null"] },
        "model": { "type": ["string", "null"] },
        "tools": { "type": ["string", "null"] },
        "path": { "type": "string", "minLength": 1 },
        "digest": { "$ref": "#/$defs/digest" }
      }
    },
    "command": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name", "description", "path", "digest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "const": "command" },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": ["string", "null"] },
        "path": { "type": "string", "minLength": 1 },
        "digest": { "$ref": "#/$defs/digest" }
      }
    },
    "skill": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name", "description", "path", "entrypoint", "digest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "const": "skill" },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": ["string", "null"] },
        "path": { "type": "string", "minLength": 1 },
        "entrypoint": { "type": "string", "minLength": 1 },
        "digest": { "$ref": "#/$defs/digest" }
      }
    },
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "name", "description", "path", "digest"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "const": "rule" },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": ["string", "null"] },
        "path": { "type": "string", "minLength": 1 },
        "digest": { "$ref": "#/$defs/digest" }
      }
    }
  }
}

